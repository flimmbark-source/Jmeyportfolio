---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const { data } = await getEntry('projects', 'bball');
const caseStudy = data.caseStudy ?? {};
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '#methodology', label: 'Methodology' },
  { href: '#results', label: 'Results' }
];
---
<BaseLayout
  title={`${caseStudy.hero?.title ?? data.title} | Jacob Meyerkopf`}
  description={caseStudy.hero?.subtitle ?? data.summary}
  mainClass="bg-gray-100"
  navLinks={navLinks}
>
  <article class="mx-auto my-10 max-w-4xl rounded-xl border border-gray-200 bg-white p-4 shadow-2xl sm:p-6 md:p-10">
    <header class="text-center pb-8">
      {caseStudy.hero?.eyebrow && <span class="text-blue-600 font-semibold tracking-wider uppercase">{caseStudy.hero.eyebrow}</span>}
      <h1 class="mt-2 text-4xl font-extrabold text-gray-900 md:text-5xl">{caseStudy.hero?.title ?? data.title}</h1>
      <p class="mt-4 text-lg text-gray-600">{caseStudy.hero?.subtitle ?? data.summary}</p>
    </header>

    <section class="mb-12" id="overview">
      <div class="rounded-lg border border-blue-200 bg-blue-50 p-6">
        <h2 class="mb-3 flex items-center text-2xl font-bold text-gray-900">
          <svg class="mr-3 h-6 w-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
          </svg>
          {caseStudy.situation?.title}
        </h2>
        <p class="text-gray-700 leading-relaxed">{caseStudy.situation?.description}</p>
      </div>
    </section>

    <section class="mb-12" id="methodology">
      <h2 class="mb-8 text-center text-3xl font-bold text-gray-900">My Action &amp; Methodology</h2>
      <div class="space-y-8">
        {caseStudy.methodology?.map((item) => (
          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-blue-100 text-blue-600">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a2 2 0 01-2-2V4a2 2 0 012-2h8a2 2 0 012 2v4z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-800">{item.title}</h3>
              <p class="mt-1 text-gray-700">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-12" id="results">
      <h2 class="mb-6 text-center text-3xl font-bold text-gray-900">The Result: An Intelligent Assistant</h2>
      <div class="gradient-bg rounded-lg border bg-gray-50 p-8">
        <p class="mb-6 text-center text-gray-700 leading-relaxed">
          The result is a powerful web application that directly addresses the problems identified in my initial research. The app successfully:
        </p>
        <ul class="mx-auto max-w-md space-y-4">
          {caseStudy.results?.map((result) => (
            <li class="flex items-start text-gray-700">
              <span class="mr-2 text-green-500">&#10003;</span>
              {result}
            </li>
          ))}
        </ul>
      </div>
    </section>

    <section class="mb-4">
      <h2 class="mb-8 text-center text-3xl font-bold text-gray-900">Skills Demonstrated</h2>
      <div class="flex flex-wrap justify-center gap-3">
        {caseStudy.skills?.map((skill) => (
          <span class="rounded-full bg-blue-100 px-3 py-1.5 text-sm font-semibold text-blue-800">{skill}</span>
        ))}
      </div>
    </section>
  </article>
</BaseLayout>
