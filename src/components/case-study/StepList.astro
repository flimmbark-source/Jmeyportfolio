---
const { steps = [] } = Astro.props;
---
{steps.length > 0 && (
  <ol class="mt-10 space-y-6">
    {steps.map((step, index) => (
      <li class="flex gap-4 rounded-2xl border border-slate-200/70 bg-slate-100/80 p-6 shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-sky-100 text-xl font-bold text-sky-700 dark:bg-sky-500/20 dark:text-sky-200">
          {String(index + 1).padStart(2, '0')}
        </div>
        <div>
          <h3 class="text-xl font-semibold text-slate-900 dark:text-white">{step.title}</h3>
          {step.description && (
            <p class="mt-2 text-base leading-relaxed text-slate-600 dark:text-slate-300">{step.description}</p>
          )}
          {step.outcome && (
            <p class="mt-3 text-sm font-medium text-slate-500 dark:text-slate-300">Outcome: {step.outcome}</p>
          )}
        </div>
      </li>
    ))}
  </ol>
)}
