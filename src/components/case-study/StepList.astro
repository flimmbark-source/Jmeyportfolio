---
const { steps = [] } = Astro.props;
---
{steps.length > 0 && (
  <ol class="mt-10 space-y-6">
    {steps.map((step, index) => (
      <li class="flex gap-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-sky-100 text-xl font-bold text-sky-700">
          {String(index + 1).padStart(2, '0')}
        </div>
        <div>
          <h3 class="text-xl font-semibold text-slate-900">{step.title}</h3>
          {step.description && (
            <p class="mt-2 text-base leading-relaxed text-slate-600">{step.description}</p>
          )}
          {step.outcome && (
            <p class="mt-3 text-sm font-medium text-slate-500">Outcome: {step.outcome}</p>
          )}
        </div>
      </li>
    ))}
  </ol>
)}
