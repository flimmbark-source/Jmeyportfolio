---
const { tags = [] } = Astro.props;
---
{tags.length > 0 && (
  <div class="mt-8 flex flex-wrap justify-center gap-3">
    {tags.map((tag) => (
      <span class="rounded-full bg-slate-900/90 px-4 py-2 text-sm font-semibold uppercase tracking-wide text-white transition-colors duration-300 dark:bg-slate-100 dark:text-slate-900">
        {tag}
      </span>
    ))}
  </div>
)}
