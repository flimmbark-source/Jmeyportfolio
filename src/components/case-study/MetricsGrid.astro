---
const { metrics = [] } = Astro.props;
---
{metrics.length > 0 && (
  <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {metrics.map((metric) => (
      <div
        class={`rounded-2xl border border-slate-200/70 bg-slate-100/80 p-6 text-center shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60 ${
          metric.accent ?? ''
        }`.trim()}
      >
        <p class="text-4xl font-extrabold text-slate-900 dark:text-white">{metric.value}</p>
        <p class="mt-2 text-sm font-medium uppercase tracking-wide text-slate-500 dark:text-slate-300">
          {metric.label}
        </p>
        {metric.description && (
          <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">{metric.description}</p>
        )}
      </div>
    ))}
  </div>
)}
