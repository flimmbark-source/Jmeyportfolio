---
const { modules = [] } = Astro.props;
---
{modules.length > 0 && (
  <div class="mt-12 grid gap-6 lg:grid-cols-3">
    {modules.map((module) => (
      <article class="flex flex-col gap-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-sky-600">{module.kicker}</p>
          <h3 class="mt-2 text-xl font-semibold text-slate-900">{module.title}</h3>
        </div>
        {module.description && (
          <p class="text-base leading-relaxed text-slate-600">{module.description}</p>
        )}
        {module.bullets && (
          <ul class="mt-2 space-y-2 text-sm text-slate-600">
            {module.bullets.map((bullet) => (
              <li class="flex gap-2">
                <span class="text-sky-500">â€¢</span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
        )}
      </article>
    ))}
  </div>
)}
