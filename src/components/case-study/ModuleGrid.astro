---
const { modules = [] } = Astro.props;
---
{modules.length > 0 && (
  <div class="mt-12 grid gap-6 lg:grid-cols-3">
    {modules.map((module) => (
      <article class="flex flex-col gap-4 rounded-2xl border border-slate-200/70 bg-slate-100/80 p-6 shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60">
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.2em] text-sky-600 dark:text-sky-300">{module.kicker}</p>
          <h3 class="mt-2 text-xl font-semibold text-slate-900 dark:text-white">{module.title}</h3>
        </div>
        {module.description && (
          <p class="text-base leading-relaxed text-slate-700 dark:text-slate-200">{module.description}</p>
        )}
        {module.bullets && (
          <ul class="mt-2 space-y-2 text-sm text-slate-700 dark:text-slate-200">
            {module.bullets.map((bullet) => (
              <li class="flex gap-2">
                <span class="text-sky-500 dark:text-sky-300">â€¢</span>
                <span>{bullet}</span>
              </li>
            ))}
          </ul>
        )}
      </article>
    ))}
  </div>
)}
