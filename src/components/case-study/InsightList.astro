---
const { items = [] } = Astro.props;
---
{items.length > 0 && (
  <div class="mt-6 space-y-4">
    {items.map((item) => (
      <article class="rounded-2xl border border-slate-200/70 bg-slate-100/80 p-5 shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60">
        <h4 class="text-lg font-semibold text-slate-900 dark:text-white">{item.title}</h4>
        {item.description && (
          <p class="mt-2 text-base leading-relaxed text-slate-600 dark:text-slate-300">{item.description}</p>
        )}
      </article>
    ))}
  </div>
)}
