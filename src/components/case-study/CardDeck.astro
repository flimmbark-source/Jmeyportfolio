---
const { cards = [] } = Astro.props;
---
{cards.length > 0 && (
  <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {cards.map((card) => (
      <div class="flex flex-col gap-3 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        {card.icon && <div class="text-3xl">{card.icon}</div>}
        <h3 class="text-xl font-semibold text-slate-900">{card.title}</h3>
        {card.description && (
          <p class="text-base leading-relaxed text-slate-600">{card.description}</p>
        )}
        {card.link && (
          <a
            class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-sky-600 hover:text-sky-700"
            href={card.link.href}
            target={card.link.external ? '_blank' : undefined}
            rel={card.link.external ? 'noreferrer noopener' : undefined}
          >
            {card.link.label}
            <span aria-hidden="true">â†’</span>
          </a>
        )}
      </div>
    ))}
  </div>
)}
