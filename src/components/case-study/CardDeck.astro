---
const { cards = [] } = Astro.props;
---
{cards.length > 0 && (
  <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {cards.map((card) => (
      <div class="flex flex-col gap-3 rounded-2xl border border-slate-200/70 bg-slate-100/80 p-6 shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60">
        {card.icon && <div class="text-3xl">{card.icon}</div>}
        <h3 class="text-xl font-semibold text-slate-900 dark:text-white">{card.title}</h3>
        {card.description && (
          <p class="text-base leading-relaxed text-slate-600 dark:text-slate-300">{card.description}</p>
        )}
        {card.link && (
          <a
            class="mt-auto inline-flex items-center gap-2 text-sm font-semibold text-sky-600 transition hover:text-sky-700 dark:text-sky-300 dark:hover:text-sky-200"
            href={card.link.href}
            target={card.link.external ? '_blank' : undefined}
            rel={card.link.external ? 'noreferrer noopener' : undefined}
          >
            {card.link.label}
            <span aria-hidden="true">â†’</span>
          </a>
        )}
      </div>
    ))}
  </div>
)}
