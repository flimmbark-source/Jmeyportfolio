---
const { eyebrow, title, subtitle, align = 'center' } = Astro.props;
const alignment = align === 'left' ? 'md:text-left' : 'md:text-center';
---
<header class={`mx-auto max-w-3xl text-center ${alignment}`}>
  {eyebrow && (
    <p class="text-sm font-semibold uppercase tracking-[0.2em] text-sky-600 dark:text-sky-300">
      {eyebrow}
    </p>
  )}
  {title && (
    <h2 class="mt-3 text-3xl font-bold text-slate-900 sm:text-4xl dark:text-white">{title}</h2>
  )}
  {subtitle && <p class="mt-4 text-lg leading-relaxed text-slate-600 dark:text-slate-300">{subtitle}</p>}
</header>
