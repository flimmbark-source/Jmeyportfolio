---
const { steps = [] } = Astro.props;
---
{steps.length > 0 && (
  <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
    {steps.map((step) => (
      <div class="flex flex-col items-center gap-3 rounded-2xl border border-slate-200/70 bg-slate-100/80 p-6 text-center shadow-sm transition-colors duration-300 dark:border-slate-700 dark:bg-slate-900/60">
        <div class="flex h-16 w-16 items-center justify-center rounded-full bg-amber-100 text-3xl dark:bg-amber-500/20 dark:text-amber-200">
          {step.icon ?? 'â€¢'}
        </div>
        <h4 class="text-lg font-semibold text-slate-900 dark:text-white">{step.title}</h4>
        {step.description && (
          <p class="text-sm leading-relaxed text-slate-700 dark:text-slate-200">{step.description}</p>
        )}
      </div>
    ))}
  </div>
)}
