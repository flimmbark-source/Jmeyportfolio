---
const { steps = [] } = Astro.props;
---
{steps.length > 0 && (
  <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
    {steps.map((step) => (
      <div class="flex flex-col items-center gap-3 rounded-2xl border border-slate-200 bg-white p-6 text-center shadow-sm">
        <div class="flex h-16 w-16 items-center justify-center rounded-full bg-amber-100 text-3xl">
          {step.icon ?? 'â€¢'}
        </div>
        <h4 class="text-lg font-semibold text-slate-900">{step.title}</h4>
        {step.description && (
          <p class="text-sm leading-relaxed text-slate-600">{step.description}</p>
        )}
      </div>
    ))}
  </div>
)}
